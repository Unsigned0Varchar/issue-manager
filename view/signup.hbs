<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign Up</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', sans-serif; }
    html, body { height: 100%; overflow: hidden; }

    .background {
      position: fixed;
      width: 100%;
      height: 100%;
      background: linear-gradient(-45deg, #ff6ec4, #7873f5, #ff9a8b, #f6d365);
      background-size: 400% 400%;
      animation: pulseShift 10s ease infinite;
      z-index: -1;
    }

    @keyframes pulseShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .signup-container {
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .signup-form {
      background: rgba(255, 255, 255, 0.07);
      padding: 45px 35px;
      border-radius: 20px;
      backdrop-filter: blur(16px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
      width: 100%;
      max-width: 450px;
      color: #fff;
      text-align: center;
      animation: fadeInUp 0.8s ease;
    }

    @keyframes fadeInUp {
      0% { transform: translateY(30px); opacity: 0; }
      100% { transform: translateY(0); opacity: 1; }
    }

    .signup-form h2 {
      margin-bottom: 28px;
      font-size: 32px;
      font-weight: 700;
    }

    .input-group { text-align: left; margin-bottom: 22px; }

    .input-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      font-size: 15px;
    }

    .input-group input, .input-group select {
      width: 100%;
      padding: 12px 14px;
      border: none;
      border-radius: 12px;
      outline: none;
      font-size: 15px;
      background-color: rgba(255, 255, 255, 0.12);
      color: #fff;
    }

    .input-group select option { color: #000; }

    .submit-btn {
      width: 100%;
      background: linear-gradient(to right, #ff6ec4, #7873f5);
      color: white;
      padding: 14px;
      font-size: 17px;
      font-weight: bold;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      margin-top: 10px;
      transition: all 0.3s ease;
    }

    .submit-btn:hover {
      background: linear-gradient(to right, #7873f5, #ff6ec4);
    }

    .login-link {
      margin-top: 20px;
      font-size: 14px;
    }

    .login-link a {
      color: #fff;
      text-decoration: underline;
    }

    @media (max-width: 480px) {
      .signup-form { padding: 30px 20px; }
      .signup-form h2 { font-size: 24px; }
      .submit-btn { font-size: 15px; }
      .input-group input, .input-group select {
        font-size: 14px; padding: 10px 12px;
      }
      .login-link { font-size: 13px; }
    }

    /* Toast styles */
    .toast {
      position: fixed;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      background-color: #222;
      color: #fff;
      padding: 14px 22px;
      font-weight: bold;
      border-radius: 8px;
      z-index: 9999;
      box-shadow: 0 0 15px rgba(0,0,0,0.2);
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to   { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>

<a href="/" style="
  position: absolute;
  top: 20px;
  left: 20px;
  background-color: #ffffff20;
  color: #fff;
  padding: 10px 18px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-family: 'Segoe UI', sans-serif;
  backdrop-filter: blur(8px);
  transition: background 0.3s ease;">
  â¬… Home
</a>

<div class="background"></div>

<div class="signup-container">
  <form class="signup-form" action="/signupUser" method="post">
    <h2>Create Account</h2>

    <div class="input-group">
      <label for="fullname">Full Name</label>
      <input type="text" id="fullname" name="name" placeholder="Your full name" required>
    </div>

    <div class="input-group">
      <label for="email">Email Address</label>
      <input type="email" id="email" name="email" placeholder="Your email" required>
    </div>

    <div class="input-group">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" placeholder="Enter a password" required>
    </div>

    <div class="input-group">
      <label for="cpassword">Confirm Password</label>
      <input type="password" id="cpassword" name="cpassword" placeholder="Re-enter your password" required>
    </div>

    <div class="input-group">
      <label for="userRole">Role</label>
      <select id="role" name="role" required>
        <option value="" disabled selected>Select Role</option>
        <option value="student">Student</option>
        <option value="teacher">Teacher</option>
      </select>
    </div>

    <button type="submit" class="submit-btn">Sign Up</button>
    <p class="login-link">Already have an account? <a href="/login">Login</a></p>
  </form>
</div>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  const error = urlParams.get("error");

  if (error) {
    let message = "";
    switch (error) {
      case "username_not_allowed":
        message = "âŒ This username is not allowed.";
        break;
      case "password_mismatch":
        message = "âŒ Passwords do not match.";
        break;
      case "user_exists":
        message = "âŒ User already exists.";
        break;
    }
    showToast(message);
  }

  if (urlParams.get("signup") === "success") {
    showToast("ðŸŽ‰ Signup successful! UserId and Password sent to your email Redirecting to login...");
    setTimeout(() => {
      window.location.href = "/login";
    }, 2500);
  }

  function showToast(message) {
    const toast = document.createElement("div");
    toast.className = "toast";
    toast.textContent = message;
    document.body.appendChild(toast);
    setTimeout(() => toast.remove(), 3000);
  }
</script>

</body>
</html>