<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>
  <style>
    Css


* { margin: 0; padding: 0; box-sizing: border-box; }

    html {
      font-family: 'Segoe UI', 'Roboto', sans-serif;
      scroll-behavior: smooth;
    }

    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #0f0f0f, #1f1f1f, #121212);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      color: white;
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .login-container {
      width: 100%;
      max-width: 420px;
      background: rgba(255, 255, 255, 0.06);
      padding: 40px;
      border-radius: 20px;
      backdrop-filter: blur(16px);
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.4);
      animation: fadeInUp 0.5s ease;
    }

    .login-form h2 {
      text-align: center;
      font-size: 28px;
      margin-bottom: 25px;
      color: #fff;
    }

    .input-group {
      margin-bottom: 20px;
    }

    .input-group label {
      font-weight: 500;
      font-size: 14px;
      margin-bottom: 8px;
      display: block;
      color: #ccc;
    }

    .input-group input {
      width: 100%;
      padding: 12px 15px;
      font-size: 15px;
      border: none;
      border-radius: 10px;
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
    }

    .input-group input::placeholder { color: #bbbbbb; }

    .input-group input:focus {
      outline: none;
      background-color: rgba(255, 255, 255, 0.15);
      box-shadow: 0 0 0 2px #00c6ff88;
    }

    .submit-btn {
      width: 100%;
      padding: 14px;
      font-size: 16px;
      font-weight: bold;
      border: none;
      border-radius: 12px;
      color: white;
      background: linear-gradient(135deg, #00d2ff, #3a47d5);
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .submit-btn:hover {
      background: linear-gradient(135deg, #0072ff, #00c6ff);
      transform: scale(1.02);
    }

    .signup-link {
      margin-top: 18px;
      font-size: 14px;
      text-align: center;
      color: #ccc;
    }

    .signup-link a {
      color: #00c6ff;
      text-decoration: none;
      font-weight: 500;
    }

    .signup-link a:hover {
      text-decoration: underline;
    }

    h3 {
      font-size: 14px;
      text-align: center;
      color: #ff6666;
      margin-bottom: 15px;
    }

    .home-btn {
      position: absolute;
      top: 20px;
      left: 20px;
      background-color: #2c2c2c;
      color: #fff;
      padding: 10px 18px;
      border-radius: 10px;
      font-weight: bold;
      text-decoration: none;
      backdrop-filter: blur(6px);
      transition: background 0.3s ease;
    }

    .home-btn:hover {
      background-color: #3a3a3a;
    }

    .toast {
      position: fixed;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      background-color: #28a745;
      color: white;
      padding: 14px 24px;
      border-radius: 8px;
      font-weight: bold;
      z-index: 9999;
      box-shadow: 0 6px 16px rgba(0,0,0,0.3);
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translate(-50%, 50px); }
      to   { opacity: 1; transform: translate(-50%, 0); }
    }

    .modal {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.7);
      backdrop-filter: blur(4px);
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    .modal-content {
      background: #1f1f1f;
      padding: 30px 24px;
      border-radius: 12px;
      width: 90%;
      max-width: 400px;
      color: white;
    }

    .modal-content h3 {
      margin-bottom: 15px;
    }

    .modal-content input {
      width: 100%;
      padding: 12px;
      margin-top: 10px;
      margin-bottom: 15px;
      background: #333;
      border: none;
      border-radius: 8px;
      color: white;
    }

    .modal-content button {
      background: #00c6ff;
      color: black;
      border: none;
      padding: 10px 16px;
      border-radius: 8px;
      font-weight: bold;
      cursor: pointer;
    }

    .modal-content button:hover {
      background: #3a47d5;
      color: white;
    }

    .modal-content p {
      font-size: 13px;
      margin-top: 8px;
    }

  </style>
</head>
<body>

<a href="/" class="home-btn">‚¨Ö Home</a>

<div class="login-container">
  <form class="login-form" action="/login" method="POST">
    {{#if checkmsg}}
      <h3>Invalid Credentials</h3>
    {{/if}}
    <h2>Welcome Back</h2>

    <div class="input-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="Enter your email/admin username" required />
    </div>

    <div class="input-group">
      <label for="password">Password</label>
      <input type="password" id="password" name="cpassword" placeholder="Enter your password" required />
    </div>

    <button type="submit" class="submit-btn">Login</button>

    <p class="signup-link">
      Don't have an account? <a href="/signup">Sign Up</a><br>
      <a href="#" onclick="openForgotModal()">Forgot Password?</a>
    </p>
  </form>

  <!-- ‚úÖ Admin Credentials Form (OUTSIDE LOGIN FORM) -->
  <form action="/send-admin-credentials" method="POST" style="text-align: center; margin-top: 12px;">
    <button type="submit" style="all: unset; cursor: pointer; color: #00c6ff; text-decoration: underline;">
      üìß Email Admin Credentials
    </button>
  </form>
</div>

<!-- Forgot Password Modal -->
<div id="forgotModal" class="modal">
  <div class="modal-content">
    <h3>üîí Forgot Password</h3>
    <form action="/forgot-password" method="POST">
      <input type="email" name="email" placeholder="Enter your registered email" required />
      <button type="submit">Send Password</button>
    </form>
    <p id="forgotMsg"></p>
    <button onclick="closeForgotModal()" style="margin-top:10px;">Close</button>
  </div>
</div>

<script>
  function showToast(message) {
    const toast = document.createElement("div");
    toast.className = "toast";
    toast.innerText = message;
    document.body.appendChild(toast);
    setTimeout(() => toast.remove(), 3000);
  }

  const params = new URLSearchParams(window.location.search);
  if (params.get("signup") === "success") {
    showToast("üéâ Signup successful! Login details sent via email.");
  }
  if (params.get("logout") === "success") {
    showToast("üëã Logged out successfully.");
  }
  if (params.get("login") === "expired") {
    showToast("‚ö†Ô∏è Session expired. Please log in again.");
  }

  const forgotParam = params.get("forgot");
  if (forgotParam) {
    openForgotModal();
    const forgotMsg = document.getElementById("forgotMsg");
    if (forgotParam === "notfound") {
      forgotMsg.textContent = "‚ùå Email not found. Please sign up.";
      forgotMsg.style.color = "orangered";
    } else if (forgotParam === "sent") {
      forgotMsg.textContent = "‚úÖ Password sent to your email!";
      forgotMsg.style.color = "lightgreen";
    } else if (forgotParam === "fail") {
      forgotMsg.textContent = "‚ùå Failed to send email. Try again later.";
      forgotMsg.style.color = "crimson";
    }
  }

  if (params.get("admincreds") === "sent") {
    showToast("‚úÖ Admin credentials sent to admin email!");
  }
  if (params.get("admincreds") === "fail") {
    showToast("‚ùå Failed to send admin credentials.");
  }

  function openForgotModal() {
    document.getElementById("forgotModal").style.display = "flex";
  }

  function closeForgotModal() {
    document.getElementById("forgotModal").style.display = "none";
  }
</script>

</body>
</html>